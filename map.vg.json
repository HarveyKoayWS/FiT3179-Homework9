{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Vehicle Registrations per 1,000 People by State (Malaysia, 2025)",
    "fontSize": 28,
    "font": "Arial",
    "fontWeight": "bold",
    "color": "black",
    "anchor": "middle"
  },
  "width": "container",
  "height": "container",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/HarveyKoayWS/FiT3179-Homework9/main/ne_10m_admin_1_states_provinces.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
      "encoding": {
        "color": {
          "field": "registrations_per_1000",
          "type": "quantitative",
          "scale": {"scheme": "OrRd"},
          "legend": {
            "title": "Registrations per 1,000 People",
            "titleFontSize": 14,
            "labelFontSize": 12
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "total_count", "type": "quantitative", "title": "Total Registrations"},
          {"field": "population", "type": "quantitative", "title": "Population"},
          {"field": "registrations_per_1000", "type": "quantitative", "title": "Registrations per 1,000"}
        ]
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/HarveyKoayWS/FiT3179-Homework9/main/state_counts_normalized.csv"
            },
            "key": "state",
            "fields": ["total_count", "population"]
          }
        },
        {
          "calculate": "datum.total_count / datum.population * 1000",
          "as": "registrations_per_1000"
        }
      ]
    },
    {
      "data": {"graticule": {"step": [10, 10]}},
      "mark": {"type": "geoshape", "stroke": "lightgray", "strokeWidth": 0.5}
    }
  ]
}
